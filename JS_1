// DECLARING VARIABLES

var petDog = "Rex"; /* Declare a new variable named petDog and give it the name Rex.*/
var petCat = "pepper"; /* Declare a new variable named petCat and give it the name Pepper. */
console.log(petDog); /* Log the petDog variable to the console. */
console.log(petCat); /* Log the  petCat variable to the console.*/

console.log("My pet dog's name is: " + petDog); /*Log the following to the console: the text "My pet dog's name is: " and the petDog variable. */
console.log("My petCat's name is: " + petCat); /* Log the following to the console: the text "My pet cat's name is: " and the petCat variable.*/

var catSound = "purr";/* Declare another variable and name it catSound. Assign the string of "purr" to it.*/
var dogSound = "woof";/* Declare another variable and name it dogSound. Assign the string of "woof" to it. */

console.log(petDog, "says", dogSound);/* Log the following to the console: the variable petDog, then the string "says", then the variable dogSound.*/
console.log(petCat, "says", catSound);/* Log the following to the console: the variable petCat, then the string "says", then the variable catSound.*/

catSound = "meow";/* Reassign the value stored in catSound to the string "meow". */
console.log(petCat, "now says", catSound);/* Log the following to the console: the variable petCat, then the string "now says", then the variable catSound. */
